import random

def start_test():
    questions = [
        'Сколько будет два плюс два умноженное на два?',
        'Бревно нужно распилить на 10 частей, сколько надо сделать распилов?',
        'На двух руках 10 пальцев. Сколько пальцев на 5 руках?',
        'Укол делают каждые полчаса, сколько нужно минут для трех уколов?',
        'Пять свечей горело, две потухли. Сколько свечей осталось?'
    ]

    answers = [6, 9, 25, 60, 2]
    
    diagnosis = [
        'Идиот',
        'Кретин',
        'Дурак',
        'Нормальный',
        'Талант',
        'Гений'
    ]
    count_right_answers = 0
    print('Здраствуйте! Введите ваше имя: ')
    user_name = input()
    
    for i in range(len(questions)):
        random_index = random.randint(0, len(questions) - 1)
        print(f'№{i + 1}', questions[random_index])
        questions.pop(random_index)
        

        while True:
            user_answer = input()
            if not user_answer.isdigit():
                print('Пожалуйста, введите число!')
                continue
            else:
                break

        right_answer = answers[random_index]
        if int(user_answer) == right_answer:
            count_right_answers += 1
    
    print(user_name, ', ', 'ваш результат: ', '\n', 'Количество правильных ответов = ', count_right_answers, '\n', 'Диагноз = ', diagnosis[count_right_answers], sep='')

start_test()

print('Хотите начать сначала? Нажмите Да или Нет')
new_test = input()

if new_test.lower() == 'да':
    start_test()

print('До новых встреч!')
